<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/froala-editor@latest/css/froala_editor.pkgd.min.css" rel="stylesheet"
        type="text/css" />
    <title>
        <%= title %>
    </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
    <h2>
        <font color="black">
            <%= title %>
        </font>
    </h2>
    
    <form action="/admin/seller_list" method="post" onsubmit="">
        <table>
            <tr>
                <td></td>
                <td>썸네일</td>
                <td>상품명</td>
                <td>상품 가격</td>
                <td>분류</td>
                <td>재고</td>
                <td>할인율</td>
            </tr>
            <% for(var i=0; i<rows.length; i++) { var oneItem=rows[i]; %>
                <tr>
                    <td>
                        <!-- <input name="box_chk" type="checkbox" value="<%=oneItem.PID%>"> -->
                    </td>
                    <td>
                        <img src="/<%=oneItem.Pimage%>" width="100" />
                    </td>
                    <td>
                        <a href="/admin/seller_read/<%=oneItem.PID%>"><%=oneItem.Pname%></a>
                    </td>
                    <td>
                        <%=oneItem.Price%>원
                    </td>
                    <td>
                        <%=oneItem.Pcategory%>
                    </td>
                    <td>
                        <%=oneItem.Stock%>
                    </td>
                    <td>
                        <%=oneItem.Salerate%>%
                    </td>
                </tr>
                <% } %>
        </table>
        <!-- <input type="submit" value="삭제"/> -->
    </form>
    <form action="/admin/seller_register" method="get" style="display:inline"><button type='submit'>+추가</button></form>
    <form action="/admin/seller_state/:1" method="get" style="display:inline"><button type='submit'>주문확인</button></form>
    <script>
        function fchk() {
            var chk_obj = document.getElementsByName("box_chk");
            var chk_leng = chk_obj.length;
            var checked = 0;
            
            for (i = 0; i < chk_leng; i++) {
                if (chk_obj[i].checked == true)
                    checked += 1;
            }
            if (checked == 0)
                alert("삭제할 상품을 선택해주세요.");
            else{
                var deletemsg = confirm(checked + "개의 상품을 삭제하시겠습니까?");
                if(deletemsg){
                    alert(checked + "개의 상품이 삭제되었습니다.");
                }
            }
        }
    </script>
</body>

</html>