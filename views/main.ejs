        function selectSort(idx) {
            var select = document.getElementById("select").value;
            if (select == "BEST 순") {
                val = 0;
            } else if (select == "할인율 순") {
                val = 1;
            } else if (select == "추천 순") {
                val = 2;
            } else {
                val = 3;
