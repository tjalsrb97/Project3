</body>
<script language="javascript">
    function cal_price() {
        var quantity = document
            .getElementById('Cquantity')
            .value;
        var price = document
            .getElementById('Price')
            .value;
        var cash = document
            .getElementById('Cash')
            .value;

        var pay_price = quantity * price;
        var rest_cash = cash - quantity * price;

        console.log("지불가격:" + pay_price);
        console.log("남은돈:" + rest_cash);
        document
            .getElementById('Cash')
            .value = cash;
        document
            .getElementById('Pay_price')
            .value = pay_price;
        document
            .getElementById('Rest_cash')
            .value = rest_cash;
    }
</script>

